@using TransNeftEnergo.DTO;
<h2>@ViewBag.entityRusName</h2>
@if (ViewBag.consObjects != null)
{
<form method="get" action="">
    <input name="enitityType" type="hidden" value="@ViewBag.entityType">
    <label>Объект потребления</label>
    <select name="consObjId">
        @{ var consObjects = (List<IdName>)(ViewBag.consObjects);
            foreach (var cm in consObjects)
            {
                <option value="@cm.Id">@cm.Name</option>
            }
        }
    </select>
    <br />
    <input type="submit" value="OK" />
</form>
}
@if (ViewBag.data != null)
{
    <p>
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%">
        
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Номер</th>
                    <th>Тип</th>
                    <th>Дата поверки</th>
                    <th>Дата окончания срока поверки</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in (List<ExpiredEntityDTO>)(ViewBag.data))
                {
                    <tr>
                        <td>@i.Id</td>
                        <td>@i.Number</td>
                        <td>@i.Type</td>
                        <td>@i.InspectionDate.ToShortDateString()</td>
                        <td>@i.ExpiredDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </p>
}


